<UserControl xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"  x:Class="GraphMaker.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="800" d:DesignWidth="600" Width="800" Height="700" xmlns:dataInput="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Data.Input">
    <sdk:TabControl  >
        <sdk:TabItem   Name="Graph" Height="20" Width="50">
            <sdk:TabItem.Header>
                <TextBlock Text="Graph"></TextBlock>
            </sdk:TabItem.Header>
        <Grid Height="600">
            <Grid.RowDefinitions>
                <RowDefinition Height="5*"></RowDefinition>
                <RowDefinition Height="2*"></RowDefinition>
            </Grid.RowDefinitions>

            <Canvas Grid.Column="0" x:Name="LayoutRoot" Width="800" Height="500" Background="White" MouseLeftButtonDown="LayoutRoot_MouseLeftButtonDown">
            </Canvas>
            <Grid Width="800" Height="200" Margin="0,0,0,-29" Grid.Row="1">
                <Button  Content="Clear" Height="22" Name="btnClear" Width="75" Click="btnClear_Click" Margin="6,130,718,48" />
                <Button Content="Generate Random" Height="23" HorizontalAlignment="Left" Name="btnGenerateRandom" VerticalAlignment="Top" Width="116" Click="btnGenerateRandom_Click" Margin="246,139,0,0" />
                <Button Content="Calculate Dist" Height="23" HorizontalAlignment="Left"  Name="btnCalcDist" VerticalAlignment="Top" Width="116" Click="btnCalcDist_Click" Margin="327,117,0,0" />
                <Button Content="Next" Height="23" HorizontalAlignment="Left" Name="btnNext" VerticalAlignment="Top" Width="75" Click="btnNext_Click" Margin="379,143,0,0" />
                <Button Content="Best" Height="23" HorizontalAlignment="Left"  Name="btnBest" VerticalAlignment="Top" Width="75" Click="btnBest_Click" Margin="246,117,0,0" />
                <TextBox Height="23" HorizontalAlignment="Right" Name="txtBoxIloscK" VerticalAlignment="Top" Width="46" Text="1" Margin="0,129,54,0" />
                <dataInput:Label Height="18"  Name="label1" VerticalAlignment="Top" Content="Iterations" Margin="700,106,40,0" />
                    <TextBox Height="23" HorizontalAlignment="Right" Margin="0,129,243,0" Name="txtBoxAlpha" Text="0.999" VerticalAlignment="Top" Width="40" />
                    <sdk:Label Content="Alpha" Height="18" Margin="517,106,243,0" Name="label2" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Right" Margin="0,129,172,0" Name="txtBoxEpsilon" Text="0.001" VerticalAlignment="Top" Width="45" />
                    <sdk:Label Content="Epsilon" Height="18" Margin="583,106,157,0" Name="label3" VerticalAlignment="Top" />
                    <TextBox Height="23" HorizontalAlignment="Right" Margin="0,129,126,0" Name="txtBoxTemp" Text="400.0" VerticalAlignment="Top" Width="40" />
                    <sdk:Label Content="Temp" Height="18" Margin="634,106,106,0" Name="label4" VerticalAlignment="Top" />
                </Grid>
        </Grid>
        </sdk:TabItem>
        <sdk:TabItem Name="Stats" Height="20" Width="50">
            <sdk:TabItem.Header>
                <TextBlock Text="Stats"></TextBlock>
            </sdk:TabItem.Header>
        </sdk:TabItem>
    </sdk:TabControl>
</UserControl>
